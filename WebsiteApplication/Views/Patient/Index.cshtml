    @using (Html.BeginForm("Index", "Patient", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    @Html.ValidationSummary(true)
                </td>
            </tr>
        </table>
        <fieldset>
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4">
