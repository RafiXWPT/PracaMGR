@using Newtonsoft.Json

@{
    ViewBag.Title = "Prośby o raport";
}

@(Html.Kendo().TabStrip()
    .Name("reports-tabstrip")
    .Animation(false)
    .Events(e => e.Select("app.reportList.onSelect"))
    .Items(i =>
    {
        i.Add().Text("OCZEKUJĄCE").LoadContentFrom("PendingReports", "ReportList").Selected(true);
        i.Add().Text("ZAAKCEPTOWANE").LoadContentFrom("AcceptedReports", "ReportList");
        i.Add().Text("ODRZUCONE").LoadContentFrom("RejectedReports", "ReportList");
    }))

@section scripts
{
    <script src="@Url.Content("~/Views/ReportList/ReportList.js")"></script>
}

<script>
    $(function() {
        app.reportList.init(@Html.Raw(JsonConvert.SerializeObject(new
                        {
                            AcceptRequestUrl = Url.Action("AcceptRequest", "ReportList"),
                            RejectRequestUrl = Url.Action("RejectRequest", "ReportList")                     
                        })));
    });
</script>
