@using WebsiteApplication.Models.ViewModels.Reports
@(Html.Kendo().Grid<ReportRequestViewModel>()
      .Name("accepted-reaport-requests")
      .Columns(c =>
      {
          c.Bound(vm => vm.PatientPesel);
          c.Bound(vm => vm.CreatedAt);
          c.Bound(vm => vm.CreatedBy);
          c.Bound(vm => vm.AcceptedAt);
          c.Bound(vm => vm.AcceptedBy);
      })
      .Pageable()
      .Sortable()
      .DataSource(ds => ds
          .Ajax()
          .PageSize(10)
          .Read(r => r.Action("ReadAcceptedReports", "ReportList"))))