@model WebsiteApplication.Models.ViewModels.Tile.TileViewModel
    
@if (Model.Break)
{
    <div class="col-md-12"><h2>@Model.BreakHeader</h2></div>
}
else
{
    <div class="col-lg-2 col-sm-6">
        <div class="circle-tile">
            <a href="@Model.TileUrl" target="_blank">
                <div class="circle-tile-heading @Model.TileColor">
                    <i class="fa fa-@Model.TileIcon fa-fw fa-3x"></i>
                </div>
            </a>
            <div class="circle-tile-content @Model.TileColor">
                <div class="circle-tile-description text-faded">
                    @Model.TileContentText
                </div>
                <div class="circle-tile-number text-faded">
                    @Model.TileValue
                </div>
                @*<a href="#" class="circle-tile-footer">More Info <i class="fa fa-chevron-circle-right"></i></a>*@
            </div>
        </div>
    </div>
}