@using WebsiteApplication.CodeBehind.Extensions
@model WebsiteApplication.Models.ViewModels.Menu.UserInfoContainerViewModel

@(Html.Kendo().Menu().Name("horizontal-menu")
        .Items(i =>
        {
            i.Add().Text("Dashboard").Action("Index", "Dashboard");
            i.Add().Text(GlobalTranslations.Institutions).Action("Index", "Institution").Visible(User.IsInAnyRole("ADMIN,ADMIN_TECH,TECHNICAN"));
            i.Add().Text("Role i uprawnienia").Action("Index", "Rights").Visible(User.IsInRole("ADMIN"));
            i.Add().Text("Raporty").Items(inner =>
            {
                inner.Add().Text("Moje").Action("MineReportsList", "MineReportsList").Visible(Model.Rights.Contains("REAPORT_GENERATION"));
                inner.Add().Text("Do akceptacji").Action("ReportsList", "ReportsList").Visible(Model.Rights.Contains("REAPORT_ACCEPTANCE"));
            }).Visible(Model.Roles.Any());

            i.Add().Text("Pacjenci").Items(inner =>
            {
                inner.Add().Text(GlobalTranslations.SearchPatient).Action("Index", "Patient");
            }).Visible(Model.Rights.Contains("GET_PATIENT_INFO"));
            i.Add().Text(GlobalTranslations.AboutSystem).Action("About", "Home");
            i.Add().Text(GlobalTranslations.Contact).Action("Contact", "Home");
            i.Add().Text(Html.Partial("_LoginPartial").ToHtmlString()).Encoded(false).HtmlAttributes(new {@style = "float: right;" });
        }))

<script>
    $(function () {
        var item = $('.k-item.k-state-default.k-last');
        item[2].firstChild.style.display = "none";
        item[2].append(item[2].firstChild.firstChild);
    });
</script>