@using WebsiteApplication.CodeBehind.Extensions
<!DOCTYPE html>
<html lang="pl-PL">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MGR</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    <meta name="description" content="Praca magisterska - Rafał Kamil Palej"/>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink(GlobalTranslations.PracaMagisterska, "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(GlobalTranslations.MainPage, "Index", "Home")</li>
                <li>@Html.ActionLink(GlobalTranslations.AboutSystem, "About", "Home")</li>
                <li>@Html.ActionLink(GlobalTranslations.Contact, "Contact", "Home")</li>
                @if (Context.User.IsInAnyRole("ADMIN,ADMIN_TECH,TECHNICAN"))
                {
                    <li>@Html.ActionLink(GlobalTranslations.Institutions, "Index", "Institution")</li>
                }
                @if (Context.User.IsInAnyRole("ADMIN,ADMIN_TECH,DOCTOR"))
                {
                    <li>@Html.ActionLink(GlobalTranslations.SearchPatient, "Index", "Patient")</li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.Partial("_LoginPartial")
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Rafał Kamil Palej - AGH</p>
    </footer>
</div>
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>